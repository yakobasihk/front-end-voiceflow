    "@voiceflow/commitlint-config": "^1.0.1",
    "@voiceflow/eslint-config": "^3.0.0-rc.5",
    "@voiceflow/git-branch-check": "^1.1.3",
    "@voiceflow/prettier-config": "^1.0.5",
    "commitizen": "^4.2.3",
    "commitlint": "^11.0.0",
    "cz-conventional-changelog": "^3.3.0",
